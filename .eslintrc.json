{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "parser": "babel-eslint",
  "plugins": ["react"],
  "rules": {
    "quotes": ["error", "single", { "avoidEscape": true }],
    "semi": ["error", "never"],
    "space-before-function-paren": ["error", "always"],
    "no-restricted-globals": 0,
    "prefer-destructuring": 0,
    "consistent-return": 0,
    "no-console": 0,
    "react/prop-types": 0,
    "react/display-name": 0
  },
  "settings": {
    "react": {
      "pragma": "React",
      "version": "detect"
    }
  }
}
